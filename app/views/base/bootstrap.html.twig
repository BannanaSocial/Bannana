<!DOCTYPE html>
<html lang="es">
	<head>
		<title>{{ app.getName() }}</title>
		<meta charset="UTF-8">
		<meta name=description content="">
		<meta name=viewport content="width=device-width, initial-scale=1">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<!-- Bootstrap CSS -->
		{% use "base/stylesheets.twig" %}
		{% block stylesheets %}
    	{{ parent() }}
		 
    	{% endblock stylesheets %}
	</head>
	<body>
		<nav class="navbar navbar-default" role="navigation">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main">
					<span class="sr-only">Navegacion</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/">
					<div class="logo">
						<div class="logo-txt">{{ app.getName() }}</div>
					</div>
					<!-- <img class="logo" src="{{ assetUri }}img/logo.png"> -->
				</a>
			</div>
		
			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse navbar-main">
				<ul class="nav navbar-nav navbar-right">
					{% if user %}
						<li class="dropdown navbar-item menu">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								Hola, {{ user.nombre }} <b class="caret"></b>
							</a>
							<ul class="dropdown-menu nav-menu">
								<li><a href="/usuario/">Mi Cuenta</a></li>
								<li><a href="/dashboard/">Dashboard</a></li>
								<li><a href="/logout/">Logout</a></li>
							</ul>
						</li>
					{% else %}
						<li class="navbar-item"><a href="/login/">Login</a></li>
					{% endif %}
				</ul>
			</div><!-- /.navbar-collapse -->
		</nav>

		{% if flash %}
        	{% include "base/components/flash.twig" %}
        {% endif %}

        {% block carrousel %}
        {% endblock carrousel %}

        {% block content %}
		<h1 class="text-center">Hello World</h1>
		{% endblock content %}

		{% block footer %}
	    <div class="copyright">
	        <div class="container">
	            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
	                <p>Â© TEC de Monterrey | Desarrollado por <a target="new" href="http://socialsystemsmx.com">SocialSystems</a></p>
	            </div>
	            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
	                <ul>
	                    <li><a href="#"><i class="fa fa-facebook-square"></i></a></li>
	                    <li><a href="#"><i class="fa fa-twitter-square"></i></a></li>
	                    <li><a href="#"><i class="fa fa-google-plus-square"></i></a></li>

	                </ul>
	            </div>
	        </div>
	    </div>
		{% endblock footer %}

		<!-- jQuery && Bootstrap JavaScript -->
		{% use "base/javascripts.twig" %}
		{% block javascripts %}
			{{ parent() }}
    	{% endblock javascripts %}
	</body>
</html>